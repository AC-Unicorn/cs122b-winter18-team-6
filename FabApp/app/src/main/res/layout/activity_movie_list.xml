<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yang.fabapp.MovieList">

    <TextView
        android:id="@+id/tx0"
        android:layout_width="383dp"
        android:layout_height="84dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tx1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx1"
        android:layout_width="383dp"
        android:layout_height="84dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tx2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx0" />

    <TextView
        android:id="@+id/tx3"
        android:layout_width="383dp"
        android:layout_height="84dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx2" />

    <TextView
        android:id="@+id/tx2"
        android:layout_width="383dp"
        android:layout_height="84dp"
        android:layout_marginBottom="35dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="14dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tx3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx1" />

    <ImageButton
        android:id="@+id/prev_bt"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="173dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:onClick="prev"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx3"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/next_bt"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginBottom="46dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="43dp"
        android:onClick="next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx3"
        app:srcCompat="@android:drawable/arrow_down_float" />
</android.support.constraint.ConstraintLayout>
